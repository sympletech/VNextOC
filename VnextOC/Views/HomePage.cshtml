@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<VnextOC.MeetupApi.MeetupEvent>
<!DOCTYPE html>
<html ng-app>
<head>
    <base href="/content/" />
    <link href="bootstrap.css" rel="stylesheet" />
    <link href="bootstrap-responsive.css" rel="stylesheet" />
    <script src="scripts/jquery-1.9.1.min.js"> </script>
    <script src="scripts/bootstrap.min.js"> </script>
    <script src="scripts/angular.js"></script>
    <script type="text/javascript">
        function meetupApiCtrl($scope) {
            $scope.ApiUrl = '/meetupApi';
            $scope.events = [{
                title: 'Next Event',
                speaker: 'Next Speaker',
                date: 'Wed, September 25, 6PM',
                location: {
                    name: 'my name',
                    street: '123 h',
                    city: 'Irvine',
                    state: 'CA',
                    zip: '92833'
                }
            }, {
                title: 'Next Event',
                speaker: 'Next Speaker',
                date: 'Wed, September 25, 6PM',
                location: {
                    name: 'my name',
                    street: '123 h',
                    city: 'Irvine',
                    state: 'CA',
                    zip: '92833'
                }
            }];
            $scope.loadevents = function() {
              
                $scope.events.push({
                    title: 'Next Event',
                    speaker: 'Next Speaker',
                    date: 'Wed, September 25, 6PM',
                    location: {
                        name: 'my name',
                        street: '123 h',
                        city: 'Irvine',
                        state: 'CA',
                        zip: '92833'
                    }
                });
            };
            
        };
    </script>
</head>
<body ng-controller="meetupApiCtrl">
    <div style="margin: auto; overflow: hidden;">
        <div class="row-fluid">
            <div class="span12">
                <img src="images/logo.jpg" class="span12" />
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <button class="btn btn-large span12" onclick="window.open('http://www.meetup.com/vNext-OrangeCounty/')">Meetup</button>
            </div>
        </div>
        <div class="well" ng-repeat="event in events">
            <div class="row-fluid ">
                <h2>Next Event</h2>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <h3>@Model.Title</h3>
                    <h4>@Model.Speaker</h4>
                    <div class="event_time">Date: @Model.Time.ToString("ddd, MMMM dd, htt")</div>

                </div>
            </div>


        </div>
        <div class="well">
            <h2>Location:</h2>
            <div class="event_host">
                <h4>@Model.Address.Name</h4>
            </div>
            <div class="event_address">@Model.Address.Street, @Model.Address.City, @Model.Address.State @Model.Address.ZipCode</div>
        </div>
    </div>
</body>
</html>
