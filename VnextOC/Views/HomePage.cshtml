@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<VnextOC.MeetupApi.Event>
<!DOCTYPE html>
<html>
    <head>
        <base href="/content/" />
        <link href="bootstrap.css" rel="stylesheet" />
        <link href="bootstrap-responsive.css" rel="stylesheet" />
        <script src="scripts/jquery-1.9.1.min.js"> </script>
        <script src="scripts/bootstrap.min.js"> </script>
    </head>
    <body>
        <div style="margin: auto; overflow: hidden; width: 480px;">
            <div class="row-fluid">
                <div class="span12">
                    <img src="images/logo.jpg" class="span12" />
                </div>
            </div>
            <div class="row-fluid"><div class="span12">
                                       <button class="btn btn-large span12" onclick="window.open('http://www.meetup.com/vNext-OrangeCounty/')">Meetup</button>
                                   </div></div>
            <div class="well">
                <div class="row-fluid ">
                    <h2>Next Event</h2>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <h3>@Model.Title</h3>
                        <h4>@Model.Speaker</h4>
                        <div class="event_time">Date: @Model.Time.ToString("ddd, MMMM dd, htt")</div>
                        
                    </div>
                </div>
                

            </div>
            <div class="well"><h2>Location:</h2>
                <div class="event_host"><h4>@Model.Address.Name</h4></div>
                        <div class="event_address">@Model.Address.Street, @Model.Address.City, @Model.Address.State @Model.Address.ZipCode</div>  
            </div>
        </div>
    </body>
</html>